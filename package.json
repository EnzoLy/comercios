    "db:migrate-subscription": "ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.ts-node.json scripts/run-subscription-migration.ts",
    "db:migrate": "ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.ts-node.json node_modules/typeorm/cli.js migration:run -d src/lib/db/data-source.ts"
